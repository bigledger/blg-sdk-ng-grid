{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "baseUrl": ".",
    "paths": {
      "@ng-ui-lib/avatar-2d": ["libs/avatar-2d/src/index.ts"],
      "@ng-ui-lib/avatar-3d": ["libs/avatar-3d/src/index.ts"],
      "@ng-ui-lib/avatar-core": ["libs/avatar-core/src/index.ts"],
      "@ng-ui-lib/avatar-tts": ["libs/avatar-tts/src/index.ts"],
      "@ng-ui-lib/export": ["libs/export/src/index.ts"],
      "@ng-ui/cell": ["libs/cell/src/index.ts"],
      "@ng-ui/charts-2d": ["libs/charts-2d/src/index.ts"],
      "@ng-ui/charts-3d": ["libs/charts-3d/src/index.ts"],
      "@ng-ui/charts-animations": ["libs/charts-animations/src/index.ts"],
      "@ng-ui/charts-bi": ["libs/charts-bi/src/index.ts"],
      "@ng-ui/charts-core": ["libs/charts-core/src/index.ts"],
      "@ng-ui/column": ["libs/column/src/index.ts"],
      "@ng-ui/core": ["libs/core/src/index.ts"],
      "@ng-ui/data": ["libs/data/src/index.ts"],
      "@ng-ui/editor-core": ["libs/editor-core/src/index.ts"],
      "@ng-ui/editor-formats": ["libs/editor-formats/src/index.ts"],
      "@ng-ui/editor-media": ["libs/editor-media/src/public-api.ts"],
      "@ng-ui/editor-plugins": ["libs/editor-plugins/src/index.ts"],
      "@ng-ui/editor-tables": ["libs/editor-tables/src/index.ts"],
      "@ng-ui/editor-themes": ["libs/editor-themes/src/index.ts"],
      "@ng-ui/editor-toolbar": ["libs/editor-toolbar/src/index.ts"],
      "@ng-ui/grid": ["libs/grid/src/index.ts"],
      "@ng-ui/row": ["libs/row/src/index.ts"],
      "@ng-ui/theme": ["libs/theme/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
